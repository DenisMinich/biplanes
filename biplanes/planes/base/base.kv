<BasePlane>:
    size: self.size
    pos: self.pos
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle / 2
            axis: 0, 0, 1
            origin: self.center
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: self.texture
    canvas.after:
        PopMatrix
